<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/auth.css">
</head>

<body>
    <%- include('includes/navbar.ejs') %>

    <main>
        <div class="auth-box">
            <form action="/user/register" method="POST">
                <div class="form-group">
                <label for="login">Nazwa użytkownika</label>
                <input type="text" class="main-input" name="login" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                <label for="password1">Hasło</label>
                <input type="password" class="main-input" name="password1">
                </div>
                <div class="form-group">
                    <label for="password2">Powtórz hasło</label>
                    <input type="password" class="main-input" name="password2">
                    </div>
                <button type="submit" class="main-btn">Zarejestruj się</button>
            </form>
        </div>
    </main>
<%- include('includes/end.ejs') %>